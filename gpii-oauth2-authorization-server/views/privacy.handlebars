{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="src/components/privacySettings/css/PrivacySettings.css" />
    <script type="text/javascript" src="src/components/privacySettings/js/PrivacySettings.js"></script>

    <title>Privacy Settings</title>
{{/section}}

{{#section 'main'}}
    <section class="gpiic-oauth2-privacySettings gpii-oauth2-panel small-10 large-8 small-centered columns">
        <div class="gpii-ouath2-inset">
            <div class="gpii-oauth2-activeUser clearfix">
                <span class="right">
                    <span class="gpii-icon gpii-icon-profile" role="presentation"></span>
                    <span class="gpiic-oauth2-privacySettings-user gpii-oauth2-userName"></span>
                    <a href=""><strong class="gpiic-oauth2-privacySettings-logout"></strong></a>
                </span>
            </div>

            <h1 class="gpiic-oauth2-privacySettings-header">Heading</h1>

            <p class="gpiic-oauth2-privacySettings-description"></p>
            <form>
                <p><strong class="gpiic-oauth2-privacySettings-directions"></strong></p>
                <div class="gpii-oauth2-privacySettings-serviceList">
                    <ul class="gpii-ouath2-inset-vertical">
                        <li class="gpiic-oauth2-privacySettings-service gpii-oauth2-privacySettings-service gpii-ouath2-inset-horizontal">
                            <strong class="gpiic-oauth2-privacySettings-serviceName gpii-oauth2-privacySettings-serviceName"></strong>
                            <span  class="gpii-icon gpii-icon-x-small" role="presentation"></span>
                        </li>
                    </ul>
                </div>
            </form>
        </div>
    </section>

    <script>
        gpii.oauth2.privacySettings(".gpiic-oauth2-privacySettings", {
            model: {
                user: "{{user.username}}",
                // services: {{authorizedServices}}
            }
        });
    </script>
{{/section}}

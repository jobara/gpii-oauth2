{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="src/components/privacySettings/css/PrivacySettings.css" />
    <script type="text/javascript" src="src/components/privacySettings/js/PrivacySettings.js"></script>

    <title>Privacy Settings</title>
{{/section}}

{{#section 'main'}}
    <section class="gpiic-oauth2-privacySettings gpii-oauth2-panel small-10 large-8 small-centered columns">
        <div class="gpii-oauth2-activeUser clearfix">
            <span class="right">
                <span class="gpii-icon gpii-icon-profile" role="presentation"></span>
                <span class="gpiic-oauth2-privacySettings-user gpii-oauth2-userName"></span>
                <a href=""><strong class="gpiic-oauth2-privacySettings-logout"></strong></a>
            </span>
        </div>

        <h1 class="gpii-oauth2-privacySettings-header">
            <span class="gpii-icon gpii-icon-password" role="presentation"></span>
            <span class="gpiic-oath-login-header">Heading</span>
        </h1>

        <p class="gpiic-oauth2-privacySettings-instructions gpii-oauth2-privacySettings-instructions"></p>

        <form id="gpiic-oauth2-privacySettings-form" class="gpiic-oauth2-privacySettings-form" action="/login" method="post">
            <div class="gpii-oauth2-privacySettings-formPanel">
                <div class="gpii-oauth2-privacySettings-formFields">
                    <label class="gpiic-oauth2-privacySettings-usernameLabel" for="gpiic-oauth2-privacySettings-usernameInput">Username</label>
                    <div class="gpii-oauth2-privacySettings-username">
                        <span class="gpii-icon gpii-icon-profile prefix" role="presentation"></span>
                        <input id="gpiic-oauth2-privacySettings-usernameInput" class="gpiic-oauth2-privacySettings-usernameInput" type="text" name="username"/>
                    </div>

                    <div class="gpii-oauth2-privacySettings-passwordMsgContainer">
                        <label class="gpiic-oauth2-privacySettings-passwordLabel" for="gpiic-oauth2-privacySettings-passwordInput">Password</label>
                        <span class="gpii-oauth2-privacySettings-passwordMsg">
                            <span class="gpiic-oauth2-privacySettings-error gpii-oauth2-privacySettings-error"></span>
                            <span class="gpiic-oauth2-privacySettings-errorIcon gpii-icon gpii-icon-exclamation" role="presentation"></span>
                        </span>
                    </div>
                    <div class="gpii-oauth2-privacySettings-password">
                        <span class="gpii-icon gpii-icon-password prefix" role="presentation"></span>
                        <input id="gpiic-oauth2-privacySettings-passwordInput" class="gpiic-oauth2-privacySettings-passwordInput" type="password" name="password"/>
                    </div>
                </div>
            </div>
            <div class="gpii-oauth2-footer">
                <a href="" class="gpii-oauth2-privacySettings-cancel"><strong class="gpiic-oauth2-privacySettings-cancel"></strong></a>
                <input type="submit" class="gpiic-oauth2-privacySettings-submit gpii-oauth2-privacySettings-submit button radius" name="log in" value=""/>
            </div>
        </form>
    </section>

    <script>
        gpii.oauth2.privacySettings(".gpiic-oauth2-privacySettings", {});
    </script>
{{/section}}
